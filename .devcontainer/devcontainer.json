{
  "name": "Azure Kafka Avro Handler",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "-v", "/var/run/docker.sock:/var/run/docker.sock",
    "--name", "azure-kafka-avro-handler"
  ],
  "postCreateCommand": "func --version && docker --version && chmod +x *.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.pylint",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-azurefunctions",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "python.defaultInterpreterPath": "/workspaces/venv/bin/python",
        "python.venvPath": "/workspaces",
        "python.venvFolders": ["venv"],
        "python.analysis.extraPaths": ["/workspaces/venv/lib/python3.11/site-packages"]
      }
    }
  }
}
