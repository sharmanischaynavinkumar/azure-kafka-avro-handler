# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.py text eol=lf
*.json text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.jar binary

# Docker and Infrastructure files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
*.dockerfile text eol=lf

# Azure Functions specific files
host.json text eol=lf
local.settings.json text eol=lf
function.json text eol=lf
requirements.txt text eol=lf
*.avsc text eol=lf

# VS Code configuration files
.vscode/settings.json text eol=lf
.vscode/tasks.json text eol=lf
.vscode/launch.json text eol=lf

# Configuration files
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
